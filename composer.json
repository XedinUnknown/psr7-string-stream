{
    "name": "ancarda/psr7-string-stream",
    "description": "Minimal string based PSR-7 StreamInterface implementation",
    "type": "library",
    "license": "MIT",
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    },
    "autoload": {
        "psr-4": {
            "Ancarda\\Psr7\\StringStream\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.2",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "composer/package-versions-deprecated": "1.11.99.1",
        "infection/infection": "^0.13.6",
        "phpstan/phpstan": "^0.12.64",
        "phpstan/phpstan-phpunit": "^0.12.17",
        "phpstan/phpstan-strict-rules": "^0.12.7",
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "analyze": "phpstan analyze src tests",
        "check-style": "phpcs",
        "check-tests": "infection --min-msi=100",
        "fix-style": "phpcbf",
        "test": "phpunit"
    }
}
